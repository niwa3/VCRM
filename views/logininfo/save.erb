<!DOCTYPE html>
<%#include "logininfo.h" %>
<% tfetch(QVariantMap, loginInfo); %>
<html>
<head>
  <meta charset="UTF-8">
  <title><%= controller()->name() + ": " + controller()->activeAction() %></title>
</head>
<body>
<p style="color: red"><%=$ error %></p>
<p style="color: green"><%=$ notice %></p>

<h1>Editing Login Info</h1>

<%== formTag(urla("save", loginInfo["id"]), Tf::Post) %>
  <p>
    <label>ID<br /><input type="text" name="loginInfo[id]" value="<%= loginInfo["id"] %>" readonly="readonly" /></label>
  </p>
  <p>
    <label>Login<br /><input type="text" name="loginInfo[login]" value="<%= loginInfo["login"] %>" /></label>
  </p>
  <p>
    <label>Passwd<br /><input type="text" name="loginInfo[passwd]" value="<%= loginInfo["passwd"] %>" /></label>
  </p>
  <p>
    <label>Salt<br /><input type="text" name="loginInfo[salt]" value="<%= loginInfo["salt"] %>" /></label>
  </p>
  <p>
    <label>User Type<br /><input type="text" name="loginInfo[userType]" value="<%= loginInfo["userType"] %>" /></label>
  </p>
  <p>
    <input type="submit" value="Save" />
  </p>
</form>

<%== linkTo("Show", urla("show", loginInfo["id"])) %> |
<%== linkTo("Back", urla("index")) %>
</body>
</html>
