<!DOCTYPE html>
<%#include "serviceinfo.h" %>
<% tfetch(QVariantMap, serviceInfo); %>
<html>
<head>
  <meta charset="UTF-8">
  <title><%= controller()->name() + ": " + controller()->activeAction() %></title>
</head>
<body>
<p style="color: red"><%=$ error %></p>
<p style="color: green"><%=$ notice %></p>

<h1>Editing Service Info</h1>

<%== formTag(urla("save", serviceInfo["id"]), Tf::Post) %>
  <p>
    <label>ID<br /><input type="text" name="serviceInfo[id]" value="<%= serviceInfo["id"] %>" readonly="readonly" /></label>
  </p>
  <p>
    <label>V ID<br /><input type="text" name="serviceInfo[vId]" value="<%= serviceInfo["vId"] %>" /></label>
  </p>
  <p>
    <label>Service Name<br /><input type="text" name="serviceInfo[serviceName]" value="<%= serviceInfo["serviceName"] %>" /></label>
  </p>
  <p>
    <label>Required Privacy Standard<br /><input type="text" name="serviceInfo[requiredPrivacyStandard]" value="<%= serviceInfo["requiredPrivacyStandard"] %>" /></label>
  </p>
  <p>
    <label>Data Type<br /><input type="text" name="serviceInfo[dataType]" value="<%= serviceInfo["dataType"] %>" /></label>
  </p>
  <p>
    <label>Interval<br /><input type="text" name="serviceInfo[interval]" value="<%= serviceInfo["interval"] %>" /></label>
  </p>
  <p>
    <input type="submit" value="Save" />
  </p>
</form>

<%== linkTo("Show", urla("show", serviceInfo["id"])) %> |
<%== linkTo("Back", urla("index")) %>
</body>
</html>
