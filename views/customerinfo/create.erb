<!DOCTYPE html>
<%#include "customerinfo.h" %>
<% tfetch(QVariantMap, customerInfo); %>
<html>
<head>
  <meta charset="UTF-8">
  <title><%= controller()->name() + ": " + controller()->activeAction() %></title>
</head>
<body>
<p style="color: red"><%=$ error %></p>
<p style="color: green"><%=$ notice %></p>

<h1>New Customer Info</h1>

<%== formTag(urla("create"), Tf::Post) %>
  <p>
    <label>L ID<br /><input name="customerInfo[lId]" value="<%= customerInfo["lId"] %>" /></label>
  </p>
  <p>
    <label>Last Name<br /><input name="customerInfo[lastName]" value="<%= customerInfo["lastName"] %>" /></label>
  </p>
  <p>
    <label>First Name<br /><input name="customerInfo[firstName]" value="<%= customerInfo["firstName"] %>" /></label>
  </p>
  <p>
    <label>Birthday<br /><input name="customerInfo[birthday]" value="<%= customerInfo["birthday"] %>" /></label>
  </p>
  <p>
    <label>E Mail Addr<br /><input name="customerInfo[eMailAddr]" value="<%= customerInfo["eMailAddr"] %>" /></label>
  </p>
  <p>
    <label>Phone Num<br /><input name="customerInfo[phoneNum]" value="<%= customerInfo["phoneNum"] %>" /></label>
  </p>
  <p>
    <input type="submit" value="Create" />
  </p>
</form>

<%== linkTo("Back", urla("index")) %>

</body>
</html>
